{
    "name": "virmator",
    "version": "6.2.2",
    "description": "Handle common package configs, commands, and dependencies.",
    "keywords": [
        "automation",
        "config",
        "configs",
        "formatting",
        "publish",
        "spellcheck",
        "template",
        "vir"
    ],
    "homepage": "https://github.com/electrovir/virmator",
    "bugs": {
        "url": "https://github.com/electrovir/virmator/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/virmator"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "dist/cli.js",
    "scripts": {
        "compile": "rm -rf dist && rm -f ./*.tsbuildinfo && tsc",
        "docs:check": "npm run compile && ts-node src/scripts/save-help-message.ts check && md-code --check README.md",
        "docs:update": "npm run compile && ts-node src/scripts/save-help-message.ts && md-code README.md",
        "format": "npm run format:base -- --write --list-different",
        "format:base": "prettier \"./**/*.+(ts|json|html|css|md|js)\"",
        "publish": "virmator publish \"npm run test:all\"",
        "test": "IGNORE_VIRMATOR_STACK_TRACE=true test-as-package mocha --config mocha.config.js",
        "test:all": "npm ci && npm run compile && npm run test && npm ci && npm run test:spelling -- --no-progress && npm run test:format && npm run docs:check",
        "test:format": "npm run format:base -- --check",
        "test:help": "ts-node src/cli/cli.ts --help",
        "test:spelling": "cspell \"{*,.*,**/{.*,*}/**/{.*,*}}\" --exclude \"test-files/spellcheck/invalid-spellcheck-repo/**/*\" --exclude \"extender-configs\"",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^13.2.1",
        "@augment-vir/node-js": "^13.2.1",
        "ansi-colors": "^4.1.3",
        "glob": "^8.1.0",
        "glob-promise": "^6.0.2",
        "semver": "^7.3.8",
        "simple-git": "^3.17.0",
        "type-fest": "^3.6.1"
    },
    "devDependencies": {
        "@electrovir/nyc": "15.1.0-fix0",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@open-wc/testing": "^3.1.7",
        "@types/chai": "^4.3.4",
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.15.5",
        "@types/semver": "^7.3.13",
        "@web/dev-server-esbuild": "^0.3.4",
        "@web/test-runner": "^0.15.1",
        "@web/test-runner-commands": "^0.6.5",
        "@web/test-runner-playwright": "^0.9.0",
        "@web/test-runner-visual-regression": "^0.7.0",
        "chai": "^4.3.7",
        "cspell": "^6.30.2",
        "fs-extra": "^11.1.1",
        "istanbul-smart-text-reporter": "^1.1.1",
        "markdown-code-example-inserter": "^0.3.0",
        "mocha": "^10.2.0",
        "mocha-spec-reporter-with-file-names": "^0.0.3",
        "prettier": "^2.8.6",
        "prettier-plugin-interpolated-html-tags": "^0.0.3",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.3",
        "prettier-plugin-organize-imports": "^3.2.2",
        "prettier-plugin-packagejson": "^2.4.3",
        "prettier-plugin-sort-json": "^1.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "test-as-package": "^0.0.3",
        "test-established-expectations": "^0.3.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^5.0.2",
        "virmator": "^6.2.1",
        "vite": "^4.2.1"
    },
    "engines": {
        "node": ">=16",
        "npm": ">=8"
    }
}
