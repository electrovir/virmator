{
    "name": "virmator",
    "version": "7.2.3",
    "description": "Handle common package configs, commands, and dependencies.",
    "keywords": [
        "automation",
        "config",
        "configs",
        "formatting",
        "publish",
        "spellcheck",
        "template",
        "vir"
    ],
    "homepage": "https://github.com/electrovir/virmator",
    "bugs": {
        "url": "https://github.com/electrovir/virmator/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/virmator"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "dist/cli.js",
    "scripts": {
        "compile": "rm -rf dist && tsc",
        "docs:check": "npm run compile && ts-node src/scripts/save-help-message.ts check && md-code --check README.md",
        "docs:update": "npm run compile && ts-node src/scripts/save-help-message.ts && md-code README.md",
        "format": "npm run format:base -- --write --list-different",
        "format:base": "prettier \"./**/*.+(ts|json|html|css|md|js)\"",
        "publish": "virmator publish \"npm run test:all\"",
        "test": "npm run compile && test-as-package mocha --config mocha.config.js",
        "test:all": "npm ci && concurrently --color --kill-others-on-fail -c auto --names tests,spelling,format,docs \"npm run compile && npm run test\" \"npm run test:spelling -- --no-progress\" \"npm run test:format\" \"npm run docs:check\"",
        "test:format": "npm run format:base -- --check",
        "test:help": "ts-node src/cli/cli.ts --help",
        "test:spelling": "cspell \"{*,.*,**/{.*,*}/**/{.*,*}}\" --exclude \"test-files/spellcheck/invalid-spellcheck-repo/**/*\" --exclude \"extender-configs\"",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^15.4.0",
        "@augment-vir/node-js": "^15.4.0",
        "ansi-colors": "^4.1.3",
        "concurrently": "^8.2.0",
        "glob": "^8.1.0",
        "glob-promise": "^6.0.3",
        "semver": "^7.5.4",
        "simple-git": "^3.19.1",
        "type-fest": "^4.0.0"
    },
    "devDependencies": {
        "@electrovir/nyc": "15.1.0-fix0",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@open-wc/testing": "^3.2.0",
        "@types/chai": "^4.3.5",
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.4.2",
        "@types/semver": "^7.5.0",
        "@web/dev-server-esbuild": "^0.4.1",
        "@web/test-runner": "^0.17.0",
        "@web/test-runner-commands": "^0.8.0",
        "@web/test-runner-playwright": "^0.10.1",
        "@web/test-runner-visual-regression": "^0.8.1",
        "chai": "^4.3.7",
        "cspell": "^6.31.2",
        "element-vir": "^14.1.0",
        "esbuild": "^0.18.14",
        "fs-extra": "^11.1.1",
        "istanbul-smart-text-reporter": "^1.1.2",
        "markdown-code-example-inserter": "^0.3.1",
        "mocha": "^10.2.0",
        "mocha-spec-reporter-with-file-names": "^0.0.3",
        "npm-check-updates": "^16.10.16",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.4",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^2.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.5",
        "prettier-plugin-sort-json": "^1.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "test-as-package": "^0.0.4",
        "test-established-expectations": "^0.5.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.6",
        "virmator": "^7.2.2",
        "vite": "^4.4.4",
        "vite-tsconfig-paths": "^4.2.0"
    },
    "engines": {
        "node": ">=16",
        "npm": ">=8"
    },
    "overrides": {
        "semver": "^7.5.4"
    }
}
