{
    "name": "virmator",
    "version": "0.0.1",
    "description": "Handle all the stuffs in one package.",
    "keywords": [],
    "homepage": "https://github.com/electrovir/virmator",
    "bugs": {
        "url": "https://github.com/electrovir/virmator/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/virmator"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "bin": "dist/cli/cli.js",
    "scripts": {
        "compile": "rm -rf dist && tsc",
        "format:base": "prettier --ignore-path .gitignore \"./{,!(dist)/**/}*.+(ts|json|html|css|md)\"",
        "format:check": "npm run format:base -- --check",
        "format": "npm run format:base -- --write",
        "prepublishOnly": "npm install && npm run test:full",
        "sanitize:all": "./bulk-sanitize.sh files/downloads",
        "sanitize:no-compile": "node dist/sanitizer/sanitize-for-test-file-cli.js",
        "sanitize": "npm run compile && node dist/sanitizer/sanitize-for-test-file-cli.js",
        "spellcheck": "cspell --unique \"./**/*\"",
        "test:file": "./test-specific-file.sh",
        "test:full": "npm run test && npm run spellcheck -- --no-progress && npm run format:check",
        "test": "npm run compile && test-vir \"./**/!(*.type).test.js\""
    },
    "dependencies": {
        "ansi-styles": "^5.2.0",
        "cspell": "^5.6.6",
        "fs-extra": "^10.0.0",
        "prettier": "^2.3.2",
        "prettier-plugin-jsdoc": "^0.3.23",
        "prettier-plugin-organize-imports": "^2.3.3",
        "prettier-plugin-packagejson": "^2.2.11",
        "prettier-plugin-sort-json": "^0.0.2",
        "test-vir": "^0.2.1",
        "typescript": "^4.3.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.12",
        "@types/node": "^16.4.7"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=7"
    }
}
