{
    "name": "virmator",
    "version": "5.0.0",
    "description": "Handle common package configs, commands, and dependencies.",
    "keywords": [
        "automation",
        "config",
        "configs",
        "formatting",
        "publish",
        "spellcheck",
        "template",
        "vir"
    ],
    "homepage": "https://github.com/electrovir/virmator",
    "bugs": {
        "url": "https://github.com/electrovir/virmator/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/virmator"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "dist/cli.js",
    "scripts": {
        "compile": "rm -rf dist && tsc",
        "docs:check": "npm run compile && tsx src/scripts/save-help-message.ts check && md-code --check README.md",
        "docs:update": "npm run compile && tsx src/scripts/save-help-message.ts && md-code README.md",
        "format": "npm run format:base -- --write --list-different",
        "format:base": "prettier \"./**/*.+(ts|json|html|css|md|js)\"",
        "prepublishOnly": "npm run test:all",
        "spellcheck": "cspell \"{*,.*,**/{.*,*}/**/{.*,*}}\" --exclude \"test-files/spellcheck/invalid-spellcheck-repo/**/*\" --exclude \"extender-configs\"",
        "test": "bash src/scripts/run-tests.sh",
        "test:all": "npm run test && npm run spellcheck -- --no-progress && npm run test:format && npm run docs:check",
        "test:format": "npm run format:base -- --check",
        "test:help": "tsx src/cli/cli.ts --help",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^4.6.1",
        "@augment-vir/node-js": "^4.6.1",
        "ansi-colors": "^4.1.3",
        "glob": "^8.0.3",
        "semver": "^7.3.8",
        "simple-git": "^3.15.1"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@open-wc/testing": "^3.1.7",
        "@types/chai": "^4.3.4",
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.10",
        "@types/semver": "^7.3.13",
        "@web/dev-server-esbuild": "^0.3.3",
        "@web/test-runner": "^0.15.0",
        "@web/test-runner-commands": "^0.6.5",
        "@web/test-runner-playwright": "^0.9.0",
        "chai": "^4.3.7",
        "cspell": "^6.15.1",
        "fs-extra": "^11.1.0",
        "istanbul-smart-text-reporter": "^1.0.0",
        "markdown-code-example-inserter": "^0.1.11",
        "mocha": "^10.1.0",
        "mocha-spec-reporter-with-file-names": "^0.0.2",
        "nyc": "^15.1.0",
        "prettier": "^2.8.0",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.1",
        "prettier-plugin-organize-imports": "^3.2.1",
        "prettier-plugin-packagejson": "^2.3.0",
        "prettier-plugin-sort-json": "^0.0.3",
        "prettier-plugin-toml": "^0.3.1",
        "tsconfig-paths": "^4.1.1",
        "tsx": "^3.12.1",
        "type-fest": "^3.3.0",
        "typescript": "^4.9.3",
        "vite": "^3.2.4"
    },
    "engines": {
        "node": ">=16",
        "npm": ">=8"
    }
}
