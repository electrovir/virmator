{
    "name": "virmator",
    "version": "1.4.1",
    "description": "Handle all the stuffs in one package.",
    "keywords": [
        "automation",
        "template",
        "vir",
        "formatting",
        "spellcheck",
        "config"
    ],
    "homepage": "https://github.com/electrovir/virmator",
    "bugs": {
        "url": "https://github.com/electrovir/virmator/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/virmator"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "bin": "dist/cli/cli.js",
    "scripts": {
        "compile": "rm -rf dist && tsc && chmod +x dist/cli/cli.js",
        "format": "npm run format:base -- --write",
        "format:base": "prettier \"./**/*.+(ts|json|html|css|md|js)\"",
        "format:check": "npm run format:base -- --check",
        "prepublishOnly": "npm install && npm run test:full",
        "spellcheck": "cspell \"{*,.*,**/{.*,*}/**/{.*,*}}\" --exclude \"test-repos/spellcheck/invalid-spellcheck-repo/**/*\" --exclude \"extender-configs\"",
        "test": "npm run compile && jest --runInBand --config ./src/jest/jest-config.ts",
        "test:file": "ts-node ./scripts/test-specific-file.ts",
        "test:full": "npm run test && npm run spellcheck -- --no-progress && npm run format:check && md-code --check README.md",
        "test:help": "npm run compile && node dist/cli/cli.js --help"
    },
    "dependencies": {
        "@types/jest": "^27.4.0",
        "ansi-styles": "5.2.0",
        "augment-vir": "^1.4.3",
        "cspell": "^5.18.5",
        "fs-extra": "^10.0.0",
        "jest": "^27.5.1",
        "markdown-code-example-inserter": "^0.1.5",
        "prettier": "^2.5.1",
        "prettier-plugin-jsdoc": "^0.3.30",
        "prettier-plugin-multiline-arrays": "^0.0.1",
        "prettier-plugin-organize-imports": "^2.3.4",
        "prettier-plugin-packagejson": "^2.2.15",
        "prettier-plugin-sort-json": "^0.0.2",
        "simple-git": "^3.2.6",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/node": "^17.0.18"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=7"
    }
}
